<main class="pt-16 mb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8">
        <h1 id="pageTitle" class="text-2xl font-bold text-gray-900 mb-4 text-center">Application 게시글 작성</h1>
        <div class="flex justify-end items-center mt-8 max-w-6xl mx-auto">

            <button class="!rounded-button bg-custom text-white px-8 py-4 text-sm font-medium hover:bg-custom/90 submit-application-button">Application 제출</button>
        </div>
        <div class="mt-12 flex justify-center max-w-6xl mx-auto">
            <div class="bg-white p-8 rounded-lg shadow-lg w-[150%]">
                <div class="space-y-6">
                    <div class="grid grid-cols-2 gap-6">
                        <div class="col-span-2">
                            <label class="block text-sm font-medium text-gray-700">제목</label>
                            <input type="text" id="applicationTitle" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"/>
                        </div>
                        <div class="col-span-1">
                            <label class="block text-sm font-medium text-gray-700">모집 시작</label>
                            <div class="grid grid-cols-3 gap-2 items-center">
                                <div class="flex items-center">
                                    <select id="startYear" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"></select>
                                    <span class="text-lg text-black ml-2">년</span>
                                </div>
                                <div class="flex items-center">
                                    <select id="startMonth" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"></select>
                                    <span class="text-lg text-black ml-2">월</span>
                                </div>
                                <div class="flex items-center">
                                    <select id="startDay" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"></select>
                                    <span class="text-lg text-black ml-2">일</span>
                                </div>
                            </div>
                            <div class="grid grid-cols-2 gap-2 items-center mt-2">
                                <div class="flex items-center">
                                    <select id="startHour" class="mt-1 block w-1/2 rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"></select>
                                    <span class="text-lg text-black ml-2">시</span>
                                </div>
                                <div class="flex items-center">
                                    <select id="startMinute" class="mt-1 block w-1/2 rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"></select>
                                    <span class="text-lg text-black ml-2">분</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-span-1">
                            <label class="block text-sm font-medium text-gray-700">모집 마감</label>
                            <div class="grid grid-cols-3 gap-2 items-center">
                                <div class="flex items-center">
                                    <select id="endYear" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"></select>
                                    <span class="text-lg text-black ml-2">년</span>
                                </div>
                                <div class="flex items-center">
                                    <select id="endMonth" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"></select>
                                    <span class="text-lg text-black ml-2">월</span>
                                </div>
                                <div class="flex items-center">
                                    <select id="endDay" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"></select>
                                    <span class="text-lg text-black ml-2">일</span>
                                </div>
                            </div>
                            <div class="grid grid-cols-2 gap-2 items-center mt-2">
                                <div class="flex items-center">
                                    <select id="endHour" class="mt-1 block w-1/2 rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"></select>
                                    <span class="text-lg text-black ml-2">시</span>
                                </div>
                                <div class="flex items-center">
                                    <select id="endMinute" class="mt-1 block w-1/2 rounded-md border-gray-300 shadow-sm focus:border-custom focus:ring-custom"></select>
                                    <span class="text-lg text-black ml-2">분</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 에디터를 적용할 요소 (컨테이너) -->
                    <div id="editor"></div>

                    <!--          첨부 파일 html 및 로직 추가 필요-->
                    <div class="mt-6">
                        <label class="block text-sm font-medium text-gray-700">첨부 파일</label>
                        <div class="mt-2 flex items-start space-x-4">
                            <div id="attachmentDropZone" class="flex justify-center items-center w-64 h-36 px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg">
                                <div class="space-y-1 text-center">
                                    <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                                        <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                                    </svg>
                                    <p class="text-xs text-gray-500">첨부파일을 드래그하거나 선택하세요</p>
                                </div>
                            </div>
                            <button id="selectAttachmentButton" class="!rounded-button bg-custom text-white px-4 py-2 text-sm font-medium hover:bg-custom/90">첨부 파일 선택</button>
                        </div>

                        <!-- 첨부 파일 목록을 표시할 div 추가 -->
                        <div id="attachmentFileList" class="mt-2"></div>
                    </div>


                </div>
            </div>
        </div>
    </div>
